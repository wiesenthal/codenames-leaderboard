{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@codenames/game-engine": ["./packages/game-engine/src"],
      "@codenames/api-contract": ["./packages/api-contract/src"],
      "@codenames/db": ["./packages/db/src"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist", ".next"],
  "references": [
    { "path": "./packages/game-engine" },
    { "path": "./packages/api-contract" },
    { "path": "./packages/db" },
    { "path": "./apps/api" },
    { "path": "./apps/web" }
  ]
} 